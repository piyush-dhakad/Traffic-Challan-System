<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".other.AboutUsActivity"
    android:background="@color/White"
    >

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        app:navigationIcon="@drawable/back"
        app:title="About Us"
        android:background="@color/Accent"
        app:titleTextColor="@color/White"
        app:titleTextAppearance="@style/custom_toolbar"
        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/White"
            >

            <TextView
                android:id="@+id/txt_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About"
                android:textColor="@color/header3"
                android:padding="15dp"
                android:textStyle="bold"
                android:background="?attr/selectableItemBackground"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider1"
                />

            <TextView
                android:id="@+id/txt_privacy_policy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Privacy Policy"
                android:textColor="@color/header3"
                android:padding="15dp"
                android:textStyle="bold"
                android:background="?attr/selectableItemBackground"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider1"
                />

            <TextView
                android:id="@+id/txt_terms_of_services"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Terms of Services"
                android:textColor="@color/header3"
                android:padding="15dp"
                android:textStyle="bold"
                android:background="?attr/selectableItemBackground"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider1"
                />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
