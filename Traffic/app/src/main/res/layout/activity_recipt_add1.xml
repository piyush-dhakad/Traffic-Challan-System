<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.ReciptAdd1Activity"
    android:background="@color/White"
    >

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        app:navigationIcon="@drawable/back"
        app:title="New Receipt"
        android:background="@color/Accent"
        app:titleTextColor="@color/White"
        app:titleTextAppearance="@style/custom_toolbar"
        />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/txt_pay"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/txt_veh_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vehicle Number *"
                    android:textColor="@color/Accent"
                    android:layout_marginTop="20dp"
                    android:textSize="16sp"
                    />

                <EditText
                    android:id="@+id/txt_veh_no1"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_round_stroke1"
                    android:padding="5dp"
                    android:hint="Enter Vehicle Number"
                    android:textColor="@color/header3"
                    android:textSize="16sp"
                    android:maxLength="40"
                    android:inputType="textPersonName"
                    />



                <TextView
                    android:id="@+id/txt_driving_lic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Driving License *"
                    android:textColor="@color/Accent"
                    android:layout_marginTop="20dp"
                    android:textSize="16sp"
                    />

                <EditText
                    android:id="@+id/txt_driving_lic1"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_round_stroke1"
                    android:padding="5dp"
                    android:hint="Enter Driving License"
                    android:textColor="@color/header3"
                    android:textSize="16sp"
                    android:maxLength="40"
                    android:inputType="textPersonName"
                    />




                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Personal Details"
                    android:textAllCaps="true"
                    android:layout_marginTop="20dp"
                    android:textSize="16sp"
                    android:textColor="@color/header1"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Name *"
                    android:textColor="@color/Accent"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    />

                <EditText
                    android:id="@+id/txt_name"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_round_stroke1"
                    android:padding="5dp"
                    android:hint="Enter Full Name"
                    android:textColor="@color/header3"
                    android:textSize="16sp"
                    android:maxLength="40"
                    android:inputType="textPersonName"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile Number *"
                    android:textColor="@color/Accent"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    />

                <EditText
                    android:id="@+id/txt_mobile"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_round_stroke1"
                    android:padding="5dp"
                    android:hint="Enter Mobile Number"
                    android:textColor="@color/header3"
                    android:textSize="16sp"
                    android:maxLength="10"
                    android:inputType="numberSigned"
                    />



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rule List"
                    android:textAllCaps="true"
                    android:layout_marginTop="20dp"
                    android:textSize="16sp"
                    android:textColor="@color/header1"
                    />

            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recycler_view"
                />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


    <TextView
        android:id="@+id/txt_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="pay â‚¹1000"
        android:textAllCaps="true"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/White"
        android:background="@drawable/rectangle_round_primary"
        android:textStyle="bold"
        android:padding="7dp"
        android:layout_marginTop="20dp"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>

