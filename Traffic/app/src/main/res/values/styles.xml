<!--                        <item name="android:textColorSecondary">@color/md_blue_600</item>    &lt;!&ndash;days of the week&ndash;&gt;-->
<!--                <item name="android:textStyle">bold</item>-->

        <item name="fontFamily">@font/my_fonts</item>

    </style>


    <style name="custom_toolbar" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="fontFamily">@font/my_fonts</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTheme.WhiteAccent">
        <item name="colorAccent">@color/Accent</item> <!-- Whatever color you want-->
    </style>


</resources>